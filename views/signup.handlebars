<div class="col-12">
    {{!-- headline --}}
    <h1 class="text-center">Sign Up</h1>

    {{!-- signup form --}}
    <container class="row justify-content-center">

        <form id="signupSubmit">

            <div class="m-3">
                <span class="label label-default text-light">username</span>
                <input id="usernameInput" type="text" class="form-control" name="usernameInput">
            </div>

            <div class="m-3">
                <span class="label label-default text-light">password</span>
                <input id="passwordInput" type="password" class="form-control" name="passwordInput">
            </div>

            <div class="text-center p-3">
                <button type="submit" class="btn btn-light">Submit</button>
            </div>

        </form>

    </container>

</div>

{{!-- link script --}}
<script src="/js/signup.js"></script>